  "scripts": {
    "build": "npm run clean && npm run serialize && webpack",
    "clean": "rm -rf dist/* && rm -rf contexts/*.jsonld",
    "lint": "eslint --ext .cjs,.js .",
    "prepare": "npm run build",
    "serialize": "node bin/serialize.js",
