  "license": "BSD-3-Clause",
  "keywords": [
    "JSON-LD",
    "JSON-LD context",
    "Linked Data",
    "VC",
    "Verifiable Credentials",
    "Verifiable Credentials Bitstring Status List",
    "context"
  ],
  "devDependencies": {
    "chai": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
